{
    "configurations": [
        {
            "name": "debug remote (gdb)",
            "type": "cppdbg",
            "request": "launch",
            // NOTE: ip address cannot be reliably hardcoded here (it is dynamically assigned to the service by minikube)
            "miDebuggerServerAddress": "192.168.49.2:30042",
            "program": "${workspaceFolder}/build/helloworld",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build binary for remote (debug symbols)",
            "miDebuggerPath": "/usr/bin/gdb"
        }
    ]
}